{
    "manifest_version": 3,
    "name": "Translate",
    "description": "Become Mr. Worldwide with LingoLive!",
    "version": "1.0",
    "icons": {
      "16": "/images/16plogo.png",
      "32": "/images/32plogo.png",
      "48": "/images/48plogo.png",
      "128": "/images/128plogo.png"
    },
    "background": {
        "service_worker": "background.js"
      },
      "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["transcript.js"]
        }
      ],    
      "web_accessible_resources": [
        {
          "resources": ["transcript.js"], 
          "matches": ["<all_urls>"]    
        }    
      ],
      "action": {
        "default_icon": {
          "16": "/images/16plogo.png",
          "32": "/images/32plogo.png",
          "48": "/images/48plogo.png",
          "128": "/images/128plogo.png"
        },
        "default_popup": "popup.html"
      },
      "permissions": ["activeTab", "scripting", "contextMenus", "audioCapture", "tabs", "storage"],
      "commands": {
        "_execute_action": {
          "suggested_key": {
            "default": "Ctrl+B",
            "mac": "Command+B"
          }
        }
    }
    
}