{
    "manifest_version": 2,
    "name": "Lingo Live",
    "description": "Become Mr. Worldwide with LingoLive!",
    "version": "1.0",
    "icons": {
      "16": "/images/16pLL.png",
      "32": "/images/32pLL.png",
      "48": "/images/48pLL.png",
      "128": "/images/128pLL.png"
    },
    "background": {
      "script": "background.js"
    },
    "web_accessible_resources": [
      "tts/speech.mp3"
    ],
    "browser_action": {
      "default_icon": { 
        "16": "/images/16pLL.png",
        "32": "/images/32pLL.png",
        "48": "/images/48pLL.png",
        "128": "/images/128pLL.png"
      },
      "default_popup": "popup.html"
      },
      "permissions": ["activeTab", "scripting", "contextMenus", "storage", "audioCapture", "tabs"],
      "commands": {
        "_execute_action": {
          "suggested_key": {
            "default": "Ctrl+B",
            "mac": "Command+B"
          }
        }
    }
    
}